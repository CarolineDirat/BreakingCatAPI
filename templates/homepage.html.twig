{% extends "base.html.twig" %}

{% block body %}

<div class="container-fluid">
    <div class="row bg-dark justify-content-center fs-1 py-2 mb-4 bc-header">
        Breaking Cat
    </div>
    <div class="d-flex justify-content-center mb-2">
        <button type="button" class="btn btn-dark btn-lg">Click here !</button>
    </div>
    <div class="d-flex justify-content-center">
        <img src={{ url("api_random_jpeg") }} class="img-fluid" alt="Cataas photo with Breaking Bad Quotes">
    </div>
    <div class="row bg-dark justify-content-center fs-2 py-2 mt-5 mb-4 bc-header">
        Breaking Cat API
    </div>
    <div class="row text-center">
        <h3>
            <button type="button" class="btn btn-dark btn-lg">GET</button>
            <a href={{ url("api_random_jpeg") }}>/api/random-jpeg</a> 
        </h3>
    </div>
    <div class="row bg-dark py-3 mt-3 bc-footer text-center">
        <span> The card is created using data from two APIs: </span>
        <a href="https://breakingbadquotes.xyz/" class="d-flex justify-content-center fs-4 fw-bolder">
            Breaking Bad Quotes API
        </a>
        <a href="https://cataas.com/#/" class="d-flex justify-content-center fs-4 fw-bolder">
            Catass
        </a>
    </div>
</div>

{% endblock %}
